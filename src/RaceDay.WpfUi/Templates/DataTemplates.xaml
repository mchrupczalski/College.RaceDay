<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:RaceDay.WpfUi.ViewModels"
                    xmlns:v="clr-namespace:RaceDay.WpfUi.Views" >
    <DataTemplate DataType="{x:Type vm:HomeViewModel}" >
        <v:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DaySummaryViewModel}" >
        <v:DaySummaryView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:RacesSummaryViewModel}" >
        <v:RacesSummaryView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:NewRaceDayViewModel}" >
        <v:NewRaceDayView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:NewRaceViewModel}" >
        <v:NewRaceView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:RaceViewModel}" >
        <v:RaceView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:RacerViewModel}" >
        <v:RacerView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:AddRacerViewModel}" >
        <v:AddRacerView />
    </DataTemplate>
    
</ResourceDictionary>